<Window x:Class="BrovkiTest.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:BrovkiTest"
        mc:Ignorable="d"
        Title="Приложение салона красоты" Height="600" Width="900"
        Background="#e1e4ff"
        ResizeMode="CanMinimize">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="40*"/>
            <RowDefinition Height="200*"/>
        </Grid.RowDefinitions>

        
        <!--Шапка приложения-->
        <StackPanel Background="#ff4a6d"/>
        <StackPanel VerticalAlignment="Center"
                    HorizontalAlignment="Center"
                    Orientation="Horizontal">
            <Image Source="./Elements/Media/beauty_logo.png"/>
            <TextBlock
                Text="БАРХАТНЫЕ БРОВКИ"
                VerticalAlignment="Center"
                Style="{StaticResource TextBlock}"/>
        </StackPanel>
        
        
        <!--Frame навигации-->
        <Frame
            Grid.Row="1"
            NavigationUIVisibility="Hidden"
            Name="FrameNav"/>
    </Grid>
</Window>
