<Page x:Class="BrovkiTest.PageMain.AdminLoginPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:BrovkiTest.PageMain"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="AdminLoginPage">

    <Grid>
        <StackPanel
            HorizontalAlignment="Center"
            VerticalAlignment="Center"
            Width="400">
            <GroupBox
                Header="Введите пароль администратора"/>
            <PasswordBox
                Name="AdminPasswordBox"/>
            
            <StackPanel 
                Orientation="Horizontal"
                HorizontalAlignment="Right">
                <Button
                Name="ButtonAdminSignIn"
                Content="Войти"
                Click="ButtonAdminSignIn_Click"
                Style="{StaticResource ButtonDef}"
                Width="100"/>

                <Button
                Name="ButtonABack"
                Content="Назад"
                Click="ButtonABack_Click"
                Style="{StaticResource ButtonDef}"
                Width="100"/>
            </StackPanel>
        </StackPanel>
    </Grid>
</Page>
