<Page x:Class="BrovkiTest.PageMain.DefaultPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:BrovkiTest.PageMain"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="DefaultPage">

    <Grid>
        <StackPanel
            Orientation="Horizontal"
            HorizontalAlignment="Center"
            VerticalAlignment="Center">
            <Button
                Name="ButtonLoginUser"
                Width="300"
                Height="50"
                Content="Войти как пользователь"
                Style="{StaticResource ButtonDef}"
                Click="ButtonLoginUser_Click"/>
            <Button
                Name="ButtonLoginAdmin"
                Width="300"
                Height="50"
                Content="Войти как администратор"
                Style="{StaticResource ButtonDef}"
                Click="ButtonLoginAdmin_Click"/>
        </StackPanel>
    </Grid>
</Page>
